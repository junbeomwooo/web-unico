<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="SubCategoryMapper">

    <!-- 단일행 조회를 위한 기능 정의-->
    <select id="selectItem">
        SELECT subcateno, subcatename, category_cateno FROM sub_category WHERE subcateno=#{subcateno};
    </select>

    <!-- 다중행 조회를 위한 기능 정의-->
    <select id="selectList">
        SELECT subcateno, subcatename, category_cateno FROM sub_category ORDER BY subcateno DESC
    </select>

    <!-- 데이터 저장을 위한 기능 정의-->
    <insert id="insertItem">
        INSERT INTO sub_category (subcatename, category_cateno) 
        VALUES (#{subcatename}, #{category_cateno});
    </insert>

    <!-- 데이터 삭제를 위한 기능 정의-->
    <delete id="deleteItem">
        DELETE FROM sub_category WHERE subcateno=#{subcateno};
    </delete>

    <!-- 데이터 갱신을 위한 기능 정의 -->
    <update id="updateItem">
        UPDATE sub_category SET subcatename=#{subcatename} WHERE subcateno=#{subcateno};
    </update>
    
</mapper>