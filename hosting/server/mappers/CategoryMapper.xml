<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="CategoryMapper">

    <!-- 단일행 조회를 위한 기능 정의-->
    <select id="selectItem">
        SELECT cateno, catename FROM category WHERE cateno=#{cateno};
    </select>

    <!-- 다중행 조회를 위한 기능 정의-->
    <select id="selectList">
        SELECT cateno, catename FROM category ORDER BY cateno DESC
    </select>

    <!-- 데이터 저장을 위한 기능 정의-->
    <insert id="insertItem">
        INSERT INTO category (catename) VALUES (#{catename});
    </insert>

    <!-- 데이터 삭제를 위한 기능 정의-->
    <delete id="deleteItem">
        DELETE FROM category WHERE cateno=#{cateno};
    </delete>

    <!-- 데이터 갱신을 위한 기능 정의 -->
    <update id="updateItem">
        UPDATE category SET catename=#{catename} WHERE cateno=#{cateno};
    </update>

    <!-- 데이터 수 조회하기 -->
    <select id="selectCountAll">
        SELECT COUNT(*) AS cnt FROM category
    </select>
    
</mapper>